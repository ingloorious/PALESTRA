<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- GifImageView para mostrar el GIF -->
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="16dp"
        android:layout_margin="16dp"
        android:alpha="3"
    app:layout_constraintTop_toTopOf="parent" />

    <!-- TextView para la descripción del ejercicio -->
    <TextView
        android:id="@+id/descripcionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-black"
        android:padding="16dp"
        android:text="Descripción del ejercicio"
        android:background="@color/Rojo"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gifImageView" />

    <TextView
        android:id="@+id/consejos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/Gris"
        android:padding="16dp"
        android:text="Consejos"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_horizontal|top"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        android:lineSpacingExtra="8dp"
        app:layout_constraintTop_toBottomOf="@+id/descripcionTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>
